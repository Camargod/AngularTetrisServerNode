{
  "compilerOptions": {
    "target": "es5",                                     
    "lib": ["es6"],                                      
    "module": "commonjs",                                
    "rootDir": "src",                                    
    "resolveJsonModule": true,                           
    "allowJs": true,                                     
    "sourceMap": true,                                
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,                                 
  },
  "include": [
    "src/**/*"
  ]
}
